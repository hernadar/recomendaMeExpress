<%- include('partials/head') %>

<%- include('partials/header') %>


    <h1>Registrar Empresa</h1>
    <br>
    <p>
        
        <a class="botonVolver" href="/">Inicio</a>

    </p>
    <br>
    
    <div> 
        <form action="/companies/register" method="post" enctype="multipart/form-data" > 
            <div class='form'>
                <label>Nombre: </label>
                <input type="text" name="name"><br>
            </div>
            <div class='form'>
                <label>Area: </label>
                <select name="areas_id">
                    <% for  (let i = 0; i < areas.length; i++ ) { %>
                        <option value="<%=areas[i].id%>"><%=areas[i].name%></option>
                    <% } %>
            
            </select> <br>
            </div>
            <div class='form'>
                <label>Descripción: </label>
                <input type="text" name="description" ><br>
            </div>
            <div class='form'>
                <label>Precio de punto de recomendación: </label>
                <input type="number" name="pricePoint" ><br>
            </div>
            <div class='form'>
                <label>Imagen: </label>
                <input type="file" name="image" ><br>
            </div>
            <button type="submit">Crear</button>
        </form>
    
        
            
        
    </div>   
    
</body>

</html>